<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="rig_btn "> +add New &nearr; </a>
</div>
<ul class="admin-posts">
    <% data.forEach(post=> { %>
        <li>

            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>

            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class=" btn both_btn ">Edit</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="post">
                    <input type="submit" value="Delete" class="btn both_btn btn-delete">
                </form>
            </div>
        </li>

        <% }) %>
</ul>