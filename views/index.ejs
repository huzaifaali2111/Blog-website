<div class="author">
    <h1 class="author_heading">Welcome To Blogify.</h1>
    <p class="author_body">Your Home To Tech Blogs</p>
</div>
<img src="/images/hero_img.jpg" alt="Blogify the Game changer" class="hero_img" width="981" height="528">
<section class="article">
    <h2 class="article_heading"> Latest Posts </h2>
    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list_date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>
    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
</section> 